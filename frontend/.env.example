# API Configuration
# Set to 'true' to use API mode (requires backend server running)
# Set to 'false' or omit to use static mode (default, no backend required)
VITE_API_MODE=false

# API URL (only used when VITE_API_MODE=true)
VITE_API_URL=http://localhost:3001

# Minimum number of bands required per genre to be displayed
# Genres with fewer bands will be hidden from the selection
VITE_MIN_BANDS_PER_GENRE=30